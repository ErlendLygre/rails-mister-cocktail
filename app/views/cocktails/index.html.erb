<div class="container">
  <div class="row">
    <% @cocktails.each do |cocktail| %>
      <div class="col-xs-12 col-sm-4">
        <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('<%= cl_image_path cocktail.photo.path, crop: :fill if cocktail.photo? %>');">
          <div class="card-category">Cocktail</div>
          <div class="card-description">
            <h2><%= cocktail.name %></h2>
          </div>
          <%= link_to cocktail.name, cocktail_path(cocktail), class: "card-link" %>
        </div>
      </div>
    <% end %>

      <div class="col-xs-12 col-sm-4">
        <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.8), rgba(0,0,0,0.8)), url('<%= cl_image_path @cocktails.first.photo.path, crop: :fill if @cocktails.first.photo? %>');">
          <%= render 'form' %>
        </div>
      </div>

  </div>
</div>

